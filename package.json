{
    "name": "structured-regular-expressions",
    "displayName": "Structured Regular Expressions",
    "description": "A library to implement Structured Regular Expressions as described in the SAM text editor.",
    "version": "0.0.1",
    "publisher": "peterschwier",
    "main": "./out/main",
    "pre-commit": [
        "test"
    ],
    "scripts": {
        "parser": "pegjs -o ./out/parser/parser.js ./src/parser/parser.pegjs",
        "tsc": "tsc -p ./",
        "tsc:watch": "npm run tsc --silent -- -watch",
        "mocha": "mocha -r ts-node/register test/**/*.spec.ts",
        "mocha:watch": "onchange \"src/**/*.ts\" \"test/**/*.spec.ts\" --initial -- npm run mocha --silent -- --reporter test/mochareporter.js",
        "test": "npm run tsc --silent && npm run mocha --silent"
    },
    "devDependencies": {
        "@types/chai": "^4.1.3",
        "@types/mocha": "^5.2.0",
        "@types/node": "^7.0.43",
        "chai": "^4.1.2",
        "mocha": "^5.1.1",
        "onchange": "^3.3.0",
        "pegjs": "^0.10.0",
        "pre-commit": "^1.2.2",
        "ts-node": "^6.0.0",
        "tslint": "^5.8.0",
        "typescript": "^2.8.3"
    }
}